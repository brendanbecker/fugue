{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://featmgmt.dev/schemas/feature-request.schema.json",
  "title": "Feature Request",
  "description": "Schema for feature_request.json files in featmgmt work items",
  "type": "object",
  "required": [
    "feature_id",
    "title",
    "component",
    "priority",
    "status",
    "type",
    "created_date",
    "updated_date",
    "description",
    "estimated_effort",
    "business_value"
  ],
  "properties": {
    "feature_id": {
      "type": "string",
      "pattern": "^FEAT-\\d{3,}$",
      "description": "Unique feature identifier (e.g., FEAT-001, FEAT-042)"
    },
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 200,
      "description": "Concise, descriptive feature title"
    },
    "component": {
      "type": "string",
      "minLength": 1,
      "description": "Target component or module"
    },
    "priority": {
      "type": "string",
      "enum": ["P0", "P1", "P2", "P3"],
      "description": "Feature priority (P0=critical, P1=high, P2=medium, P3=low)"
    },
    "status": {
      "type": "string",
      "enum": ["new", "in_progress", "blocked", "completed", "verified", "closed", "wont_do"],
      "description": "Current feature status"
    },
    "type": {
      "type": "string",
      "enum": ["enhancement", "new_feature", "improvement"],
      "description": "Type of feature request"
    },
    "created_date": {
      "type": "string",
      "format": "date",
      "description": "Date feature was requested (YYYY-MM-DD)"
    },
    "updated_date": {
      "type": "string",
      "format": "date",
      "description": "Date feature was last updated (YYYY-MM-DD)"
    },
    "assigned_to": {
      "type": ["string", "null"],
      "description": "Agent or person assigned to this feature"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "Tags for categorization and filtering"
    },
    "estimated_effort": {
      "type": "string",
      "enum": ["small", "medium", "large", "xl"],
      "description": "Estimated implementation effort"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(FEAT|BUG)-\\d{3,}$"
      },
      "default": [],
      "description": "Work items this feature depends on"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Detailed feature description"
    },
    "business_value": {
      "type": "string",
      "enum": ["high", "medium", "low"],
      "description": "Business value of the feature"
    },
    "technical_complexity": {
      "type": "string",
      "enum": ["high", "medium", "low"],
      "description": "Technical complexity of implementation"
    },
    "user_impact": {
      "type": "string",
      "description": "Impact on users when feature is implemented"
    }
  },
  "additionalProperties": false
}
